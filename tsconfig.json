{
    "compilerOptions": {
        "allowJs": false,
        "alwaysStrict": true,
        "charset": "utf8",
        "module": "CommonJS",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "pretty": true,
        "removeComments": false,
        "sourceMap": false,
        "target": "esnext"
    },
    "include": ["**/*"]
}
